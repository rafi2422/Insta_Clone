{
  "rewrites": [
    {
      "source": "/api/(.*)",  // All routes that start with /api will be forwarded
      "destination": "https://your-backend-domain.com/api/$1"  // Your backend server link
    }
  ],
  "headers": [
    {
      "source": "/(.*)",  // Apply to all routes
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"  // Allows all origins
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"  // Allowed HTTP methods
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Authorization"  // Allowed headers
        }
      ]
    }
  ]
}
